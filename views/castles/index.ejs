<% layout('layouts/indexBoilerplate') %>
    <div id="cluster-map"></div>
    <div class="container text-center">
        <h1 class="fw-bold text-muted">Castles</h1>
    </div>
    <% for (let castle of castles){%>
        <div class="card mb-3 bg-dark text-bg-primary p-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (castle.images.length) {%>
                        <img class="img-fluid" alt="" src="<%=castle.images[0].url %>">
                        <% } else {%>
                            <img class="img-fluid"
                                src="https://res.cloudinary.com/dgcywxbww/image/upload/v1678790514/Castles/default_lls60v.png"
                                alt="">
                            <% } %>
                </div>
                <div class="col-md-8" id="noshadow">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= castle.title %>
                        </h5>
                        <p class="card-text">
                            <%= castle.location %>
                        </p>
                        <p class="card-text">
                            <small class="text-white-50" id="noshadow">
                                <%= castle.description %>
                            </small>
                        </p>
                        <a class="btn btn-dark fw-bold" id="text" href="/castles/<%= castle._id%>">View <%= castle.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const castles = { features: <%- JSON.stringify(castles) %>}
            </script>
            <script src="/javaScripts/clusterMap.js"></script>