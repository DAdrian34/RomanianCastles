<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center fw-bold text-white" id="edit">Edit Castle</h1>

        <div class="col-6 offset-3">
            <div class="card shadow ">
                <div class="card-body">
                    <form action="/castles/<%= castle._id %>?_method=PUT" method="POST" novalidate
                        class="validated-form" , enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="">Title</label>
                            <input type="text" class="form-control" id="title" name="castle[title]"
                                value="<%= castle.title %>" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="">Location</label>
                            <input type="text" class="form-control" id="location" name="castle[location]"
                                value="<%= castle.location %>" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="price">Ticket/pers</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">â‚¬</span>
                                <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                                    aria-describedby="price-label" name="castle[price]" value="<%= castle.price %>"
                                    required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="">Description</label>
                            <textarea class="form-control" type="text-area" id="description" name="castle[description]"
                                required><%= castle.description %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="">Add more Images</label>
                            <div class="input-group mb-3">
                                <input type="file" class="form-control" id="image" name="image" multiple>
                                <label class="input-group-text" for="image">Upload</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <% castle.images.forEach(function(img, i){ %>
                                <img src="<%=img.thumbnail%>" class="image-thumbmail" alt="">
                                <div class="form-check-inline">
                                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]"
                                        value="<%=img.filename%>">
                                </div>
                                <label for="image-<%=i%>">Delete</label>
                                <% }) %>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-dark"><a href="/castles/<%= castle._id %>">Back</a></button>
                            <button class="btn btn-dark">Update Castle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>